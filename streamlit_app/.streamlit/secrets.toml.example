# Streamlit Cloud Secrets Configuration Template
# This file contains the structure for sensitive information
# Copy this to secrets.toml and fill in your actual values
# NEVER commit secrets.toml to version control!

# ================================
# OpenAI Configuration (Required)
# ================================
OPENAI_API_KEY = "your-openai-api-key-here"
ASSISTANT_ID = "your-assistant-id-here"

# ================================
# Application Configuration
# ================================
ENVIRONMENT = "production"
APP_NAME = "Banner Agent v2"
APP_VERSION = "2.0.0"
APP_DESCRIPTION = "AI-powered banner creation using OpenAI"

# ================================
# Backend API Configuration
# ================================
API_BASE_URL = "http://localhost:8080"
API_VERSION = "v1"
API_TIMEOUT = 30

# ================================
# Feature Flags
# ================================
ENABLE_DEBUG = false
ENABLE_ANALYTICS = true
ENABLE_CACHE = true

# ================================
# Security Configuration
# ================================
SESSION_SECRET = "your-session-secret-here"
ENCRYPTION_KEY = "your-encryption-key-here"

# ================================
# External Services (if applicable)
# ================================
# DATABASE_URL = "your-database-url-here"
# REDIS_URL = "your-redis-url-here"
# S3_BUCKET = "your-s3-bucket-here"
# AWS_ACCESS_KEY_ID = "your-aws-access-key-here"
# AWS_SECRET_ACCESS_KEY = "your-aws-secret-key-here"

# ================================
# Notes for Deployment
# ================================
# 1. In Streamlit Cloud: Add these values through the Secrets management UI
# 2. In local development: Create a secrets.toml file with actual values
# 3. For other deployments: Use environment variables or secure key management